<%# locals: reload, graphs, guides, filename %>
<%# graph: name, axis, bullet %>
<%# guide: name, range %>
<settings>
  <reload_data_interval><%= reload %></reload_data_interval>
  <redraw>true</redraw>
  <font>Tahoma</font>
  <hide_bullets_count>18</hide_bullets_count>
  <rescale_on_hide>0</rescale_on_hide>
  <data_type>csv</data_type>
  <decimals_separator>.</decimals_separator>
  <csv_separator>,</csv_separator>
  <digits_after_decimal>2</digits_after_decimal>
  <background>
    <alpha>90</alpha>
    <border_alpha>10</border_alpha>
  </background>
  <plot_area>
    <margins>
      <left>50</left>
      <right>50</right>
      <top>50</top>
      <bottom>60</bottom>
    </margins>
  </plot_area>
  <scroller>
    <enabled>true</enabled>
  </scroller>
  <grid>
    <x>
      <alpha>10</alpha>
      <approx_count>9</approx_count>
    </x>
    <y_left>
      <alpha>10</alpha>
    </y_left>
  </grid>
  <axes>
    <x>
      <width>1</width>
      <color>0D8ECF</color>
    </x>
    <y_left>
      <width>1</width>
      <color>0D8ECF</color>
    </y_left>
    <y_right>
      <width>1</width>
    </y_right>
  </axes>
  <indicator>
    <color>0D8ECF</color>
    <x_balloon_text_color>FFFFFF</x_balloon_text_color>
    <line_alpha>50</line_alpha>
    <selection_color>0D8ECF</selection_color>
    <selection_alpha>20</selection_alpha>
  </indicator>
  <zoom_out_button>
    <alpha>100</alpha>
  </zoom_out_button>
  <help>
    <button>
      <color>FCD202</color>
      <text_color>000000</text_color>
      <text_color_hover>FF0F00</text_color_hover>
    </button>
    <balloon>
      <text><![CDATA[Click on the graph to turn on/off value baloon <br/><br/>Click on legend key to show/hide graph<br/><br/>Mark the area you wish to enlarge]]></text>
      <color>FCD202</color>
      <text_color>000000</text_color>
    </balloon>
  </help>
  <graphs><% graphs.each_with_index do |graph,i| %>
    <graph gid="<%= i %>">
      <title><%= graph.name %></title>
      <axis><%= graph.axis %></axis>
    </graph><% end %>
  </graphs>
  <guides>
    <max_min>1</max_min>
  <% guides.each_with_index do |guide,i| %>
    <guide gid="<%= i %>">
      <start_value><%= guide.range.first %></start_value>
      <end_value><%= guide.range.last %></end_value>
      <title><%= guide.name %></title>
      <color>00FFCC</color>
      <fill_alpha>14</fill_alpha>
      <centered>0</centered>
      <inside>1</inside>
      <text_size>8</text_size>
      <rotate>0</rotate>
    </guide>
  <% end %>
  </guides>
</settings>
